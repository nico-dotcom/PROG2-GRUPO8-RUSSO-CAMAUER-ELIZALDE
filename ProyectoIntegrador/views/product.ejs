<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
    <!-- Header -->
	<%- include('./partials/headerLogueado')%>
    <!-- /Header -->
    
	<!-- product detail -->
    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <h2 class="products-title">Nombre del producto</h2>
            <p class="product-detail-description">
                <a href="/add">Editar</a>
            </p>
        </div>
        <div class="product-detail">
            <div class="row">
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src = <%= lista.productos[0].imagen %> alt="" class="product-detail-img">
                    <p class="product-detail-description">
                        <%= lista.productos[0].descripcion %> </p>
                </article>
                <div class="col-12 col-lg-4">
                    <section class="comments">
                    <% for (let i = 0; i < lista.productos[0].comentarios.length; i++) { %>
                        <article>
                            <img src= <%= lista.productos[0].comentarios[i].imagenPerfil %> alt="">
                            <div class="data">
                                <p class="user">                              
                                <strong> <a href="profile.html"></a> <%= lista.productos[0].comentarios[i].nombreUsuario %></strong>
                                <%= lista.productos[0].comentarios[i].texto %></p>
                            </div>
                        </article>
                       
                    <%} %>
                </section>

                    <form class="form" action="/" method="get">
                        <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                        <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <!-- /product detail -->

    <!-- footer -->
    <%- include('./partials/footer')%>
    <!-- /footer -->

</body>
</html>



