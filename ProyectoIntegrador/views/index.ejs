<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo.jpg" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>

	<%- include('./partials/header')%>

	<!-- Banner -->
	<div class="banner">
		<!-- <img src="images/img-home-banner.jpg" alt="Banner de ofertas"> -->
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
	
			<% for (let i = 0; i < lista.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/info">
						<figure class="product-box_image">
							<img src= <%= lista[i].imagen %> alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= lista[i].nombre%></h2>
							<p><%= lista[i].descripcion %></p>
							<p>Comentarios: <%= lista[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>
			<%} %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 6; i < lista.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/info">
							<figure class="product-box_image">
								<img src = <%= lista[i].imagen %> >
							</figure>
							<article class="product-box_data">
								<h2><%= lista[i].nombre%></h2>
								<p><%= lista[i].descripcion %></p>
								<p>Comentarios: <%= lista[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<%} %>
		
	<!-- /Más comentados -->
	<%- include('./partials/footer')%>
		<!-- /footer -->
</body>	
</html>