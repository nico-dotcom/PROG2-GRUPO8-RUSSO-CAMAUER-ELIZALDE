<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>

    <% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
     <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

    <!-- Banner -->
    <div class="banner">
        <!-- <img src="images/img-home-banner.jpg" alt="Banner de ofertas"> -->
    </div>
    <!-- /Banner -->

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                
                <h2 class="products-title">Novedades</h2>
            </div>
            <a href="/info">
            <% for (let i = 0; i < lista.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    
                    <a href="product/info">
                        <figure class="product-box_image">
                            <img src= <%= lista[i].imagen_producto %> alt="cafetera moulinex">
                        </figure>
                        <article class="product-box_data">
                            <h2><a href="/profile"><%= lista[i].Usuario.email%></h2></a>
                            <p><%= lista[i].descripcion %></p>
                            
                            <p>Comentarios: <%= lista[i].Comentario%></p>
                        </article>
                    </a>
                </section>
            </div>
            <%} %>
        </a>
        </div>
    </div>

    <!-- /Novedades -->

    <!-- Más comentados -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Más comentados</h2>
            </div>
            <!-- Show the "ultimos" products -->
            <% for (let i = 6; i < lista.length; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/info">
                            <figure class="product-box_image">
                                <img src = <%= lista[i].imagen %> >
                            </figure>
                            <article class="product-box_data">
                                <h2><%= lista[i].Usuario.email%></h2>
                                <p><%= lista[i].descripcion %></p>
                                <p>Comentarios: <%= lista[i].comentarios %></p>
                            </article>
                        </a>
                    </section>
                </div>
                <%} %>
       
    <!-- /Más comentados -->
    <%- include('./partials/footer')%>
        <!-- /footer -->
</body>
</html>